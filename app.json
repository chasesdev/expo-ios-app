{
  "expo": {
    "name": "expo-ios-app",
    "slug": "expo-ios-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.expo.iosapp",
      "deploymentTarget": "16.0",
      "infoPlist": {
        "UIBackgroundModes": ["fetch"],
        "NSCameraUsageDescription": "This app uses the camera for capturing images in the PromptInput component.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos for image attachments.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice input in the PromptInput component."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.expo.iosapp",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
